<html lang="zh-CN">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>注册</title>
<meta name="author" content="Sam Su">
<meta name="keywords" content="MeMe">
<meta name="description" content="MeMe">
<link type="text/css" href="/css/bootstrap.css" rel="stylesheet">
<link rel="shortcut icon" type="image/x-icon" href="/img/fav.png">
<script type="text/javascript" src="http://cdn.bootcss.com/jquery/1.9.1/jquery.min.js"></script>
<script type="text/javascript" src="/js/jquery.reveal.js"></script>
<style type="text/css">
/* Override some defaults */
html, body {
font-family:Helvetica,Arial,sans-serif;
font-size:11px;
}
body {
padding-top:0px;
background-image:url(/img/bg.png);
background-repeat:repeat repeat;
}
a:hover{color:#FFF;text-decoration:none;background-color:#0088cc}
#getMap{
	color:#bababa;
	font-size:11px;
}
#getMap:hover{
	color:#4096EE;
	text-decoration:none;
}
.container {
width: 820px;
background-color: #fff;
padding: 20px;
-webkit-border-radius: 0 0 6px 6px;
-moz-border-radius: 0 0 6px 6px;
border-radius: 0 0 6px 6px;
-webkit-box-shadow: 0 1px 2px rgba(0,0,0,.15);
-moz-box-shadow: 0 1px 2px rgba(0,0,0,.15);
box-shadow: 0 1px 2px rgba(0,0,0,.15);
}
#bottonReg{
height:30px;
}
.container > .content {
background-color: #fff;
padding: 20px;
margin: 0 -20px;
}
input[type="text"], input[type="password"]{
	height:30px;
	width:300px;
	padding-bottom:7px;
	padding-top:7px;
	font-size:14px;
	font-weight:bold;
}
select,option{
font-size:13px;
font-weight:bold;
}
.inputBtnDiv{
margin-top:15px;
}
.content .span3 {
margin-left: 0;
padding-left: 19px;
border-left: 1px solid #eee;
}
.span3{
padding:0px;
}
#zone{
width:125px;
height:39px;
padding-bottom:7px;
padding-top:7px;
}
.place{
width:180px;
height:39px;
padding-bottom:7px;
padding-top:7px;
}
.icon-user,.icon-envelope,.icon-map-marker,.icon-lock{
	opacity:0.7;
	filter: alpha(opacity=70);
}
</style>
</head>

<body id="top">

<div class="container">
<h3>注册</h3>

	<div class="content">
		<div class="row">
		<div class="span7">
		<form action="<{spUrl c=user a=register}>" method="post">
					<div class="clearfix">
						<label for="username" class="muted"><i class="icon-user"></i> 昵称</label>
						<div class="input">
							<input id="username" name="username" type="text" required="required">
						</div>
					</div>
					<div class="clearfix">
						<label class="muted"><i class="icon-map-marker"></i> 我住在
							[<a id="getMap">查看地图</a>]
						</label>

						<div style="width:603px;height:300px;display:none;margin:20px 0;" id="pano_container"></div>
							
							<select id="zone"> 
							<option>请选择
							<option>莲湖区
							<option>高新区
							<option>新城区
							<option>碑林区
							<option>雁塔区
							<option>灞桥区
							<option>长安区
							<option>未央区
							</select> 

							<select class="place">
							<option>请选择
							<option>五路口</option> 
							<option>鸡市拐</option> 
							<option>建国路</option> 
							<option>凤城二路</option> 
							<option>玫瑰大楼</option> 
							</select> 

					</div>
					<div class="clearfix">
						<label for="email" class="muted"><i class="icon-envelope"></i> 电子邮件</label>
						<div class="input">
							<input id="email" name="email" value="" type="text" required="required">
						</div>
					</div>
					<div class="clearfix">
						<label for="password" class="muted"><i class="icon-lock"></i> 密码</label>
						<div class="input">
							<input id="password" name="password" type="password" required="required">
						</div>
					</div>
					<div class="clearfix">
						<label for=""></label>
						<div class="input" id="chk">
							<input type="checkbox"/>
							<span>我已阅读并同意<a target="_blank" href="/about#agreement">使用协议</a></span>
						</div>
					</div>
					<div class="clearfix">
						<label for=""></label>
						<div class="inputBtnDiv">
						<input class="btn " id="bottonReg" value="注册" disabled="disabled" type="submit">
						</div>
					</div>	
		</form>
		</div>
		<div class="span3">
			已有帐号? <a href="/login">请登录</a><br>
        </div>
		</div><!--row-->
	</div>

	<p class="muted">开发中</p>
		<div class="progress progress-striped active">
		  <div class="bar" style="width: 40%;"></div>
		</div>
	<hr>

	<footer>
		<span class="muted">© 2014</a>
		<a style="display: none; " rel="nofollow" href="#top" id="go-to-top"></a>
		Sam Su
		</span>
		<span class="pull-right muted">先回<a href="/">首页</a>转转
	</footer>
</div>
<script type="text/javascript" src="http://cdn.bootcss.com/jquery/1.9.1/jquery.min.js"></script>
<script charset="utf-8" src="http://map.qq.com/api/js?v=2.exp&key=d84d6d83e0e51e481e50454ccbe8986b"></script>
<script type="text/javascript" src="/js/jquery.reveal.js"></script>
<script>
$(function(){
	$("#chk").find("input").change(function(){
		var xh=$("#chk").find("input:checked").size();
		if(xh){
		$("#bottonReg").prop({"disabled":false});
		$("#bottonReg").prop({"class":"btn btn-primary"});
		}else{
		$("#bottonReg").prop({"disabled":"disabled"});
		$("#bottonReg").prop({"class":"btn"});
		}
	});
	
	// 创建街景
	pano = new qq.maps.Panorama(document.getElementById('pano_container'), {
		"pano": '10011001120131111029111'
	});

	$("#getMap").click(function() {
		$("#pano_container").slideToggle("fast");
	});//click

});
</script>
</body>
</html>
