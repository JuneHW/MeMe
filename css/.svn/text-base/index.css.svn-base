	padding:15px;
	overflow-x:hidden;
	overflow-y:hidden;
}
#some-textarea::-webkit-input-placeholder,.input-xxlarge::-webkit-input-placeholder{
    color:#CCC;
	opacity:0.5;
}
/**** textarea scroll-bar ****/
pre::-webkit-scrollbar-track-piece,.pre-scrollable::-webkit-scrollbar-track-piece{ 
	background-color:#FFF; 
} 
pre::-webkit-scrollbar,.pre-scrollable::-webkit-scrollbar{ 
	width:7px; 
} 
pre::-webkit-scrollbar-thumb,.pre-scrollable::-webkit-scrollbar-thumb{ 
	height:100px; 
	background-color:#CDC9C9; 
	outline:transparent; 
}
pre::-webkit-scrollbar-thumb:hover,.pre-scrollable::-webkit-scrollbar-thumb:hover{ 
	background-color:#828282; 
}
.pre-scrollable{
	font-family: Consolas,Courier,Courier New,monospace,serif;
	font-size:11px;
	line-height: 1.4;
	overflow-x: auto;
	background-color: #f7f7f9;
	padding: 2px 8px;
	color:#008080;
	opacity:0.8;
}
.pre-scrollable:hover{
	color:#005757;
	opacity:1;
}
pre{
	max-height: 340px;
	overflow-y: auto;
	padding-right:10px;
	color:#888;
}
pre:hover{
	color:#003;
}
.guide{
	float:right;
}
/*--------------------------------------------------
Modals
-------------------------------------------------- */
.reveal-modal-bg { 
	position: fixed; 
	height: 100%;
	width: 100%;
	background: #000;
	background: rgba(0, 0, 0, 0.7);
	z-index: 100;
	display: none;
	top: 0;
	left: 0; 
}
.reveal-modal {
	visibility: hidden;
	top: 100px; 
	left: 50%;
	margin-left: -400px;
	width: 720px;
	height:400px;
	background-color: #eee;
	position: fixed;
	z-index: 101;
	padding: 30px 40px 34px;
	-moz-border-radius: 5px;
	-webkit-border-radius: 5px;
	border-radius: 5px;
	-moz-box-shadow: 0 0 10px rgba(0,0,0,.4);
	-webkit-box-shadow: 0 0 10px rgba(0,0,0,.4);
	-box-shadow: 0 0 10px rgba(0,0,0,.4);
}
.reveal-modal .close-reveal-modal {
	font-size: 22px;
	line-height: .5;
	position: absolute;
	top: 10px;
	right: 11px;
	color: #aaa;
	text-shadow: 0 -1px 1px rbga(0,0,0,.6);
	font-weight: bold;
	cursor: pointer;
}